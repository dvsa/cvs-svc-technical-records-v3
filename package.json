{
  "type": "commonjs",
  "name": "technical-records-v3",
  "version": "1.2.0",
  "description": "An API to access flat technical records",
  "main": "index.js",
  "scripts": {
    "lint": "eslint '*/**/*.ts' --quiet --fix",
    "lint:ci": "eslint '*/**/*.ts'",
    "test": "jest --coverage",
    "test:ci": "jest --ci",
    "build": "npm run build:prod",
    "build:dev": "NODE_ENV=development webpack-cli --config webpack/webpack.development.js",
    "watch:dev": "NODE_ENV=development webpack-cli --config webpack/webpack.development.watch.js & DOCKER_HOST=unix://$HOME/.docker/run/docker.sock npm run start:dev",
    "build:prod": "webpack-cli --config webpack/webpack.production.js",
    "start:dev": "npm run dynamo:start && sam local start-api --docker-network dynamo_net",
    "invoke": "sam local invoke --docker-network dynamo_net",
    "dynamo:start": " docker compose up -d && ts-node scripts/setup-local-tables.ts",
    "dynamo:stop": "docker compose down",
    "dynamo:reset": "docker compose down --volumes && npm run dynamo:start",
    "tools-setup": "echo 'move on'",
    "test-i": "echo 'no integration tests'",
    "package": "npm run build:prod"
  },
  "contributors": [
    {
      "name": "Shaun Hare",
      "email": "shaun.hare@dvsa.gov.uk"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.341.0",
    "@aws-sdk/client-lambda": "^3.362.0",
    "@aws-sdk/util-dynamodb": "^3.362.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@dvsa/cvs-type-definitions": "^2.0.13",
    "@aws-sdk/types": "^3.341.0",
    "@dvsa/eslint-config-ts": "^3.0.0",
    "@types/aws-lambda": "^8.10.114",
    "@types/jest": "^28.1.8",
    "@types/node": "^16.18.34",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "archiver": "^5.3.1",
    "aws-sam-webpack-plugin": "^0.13.0",
    "copy-webpack-plugin": "^11.0.0",
    "current-git-branch": "^1.1.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "fs-extra": "^10.1.0",
    "jest": "^28.1.3",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "uuid": "^8.3.2",
    "webpack": "^5.78.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": "^18.15.0"
  }
}
