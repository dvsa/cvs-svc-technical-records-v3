{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler"
  },
  "include": ["src/**/*.ts", "hotfix/**/*.ts", "tests/**/*.ts", "scripts/**/*.ts"]
}
